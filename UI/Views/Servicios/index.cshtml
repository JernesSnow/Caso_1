@model IEnumerable<AccesoADatos.Models.Servicio>
@{
    ViewData["Title"] = "Servicios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="page-title"> <span>Servicios</span></h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Registrar servicio
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th class="text-end">Monto</th>
                    <th class="text-end">IVA</th>
                    <th>Especialidad</th>
                    <th>Especialista</th>
                    <th>Clínica</th>
                    <th>Estado</th>
                    <th style="width:180px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Nombre</td>
                        <td class="text-truncate" style="max-width:320px">@s.Descripcion</td>
                        <td class="text-end">@s.Monto.ToString("C2")</td>
                        <td class="text-end">@s.IVA.ToString("C2")</td>
                        <td>@s.EspecialidadTexto</td>
                        <td>@s.Especialista</td>
                        <td>@s.Clinica</td>
                        <td>
                            @if (s.Estado)
                            {
                                <span class="badge bg-success badge-status">Activo</span>
                            }
                            else
                            {

                                <span class="badge bg-secondary badge-status">Inactivo</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@s.Id">Editar</a>
                                <a class="btn btn-sm btn-outline-info" asp-action="Citas" asp-route-id="@s.Id">Ver citas</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}