@model AccesoADatos.Models.Servicio
@{
    ViewBag.Title = "Editar Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Editar Servicio</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="card p-4 shadow-sm">
        <div class="mb-3">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="2"></textarea>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Monto"></label>
                <input asp-for="Monto" type="number" step="0.01" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="IVA"></label>
                <input asp-for="IVA" type="number" step="0.01" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Especialista"></label>
            <input asp-for="Especialista" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Clinica"></label>
            <input asp-for="Clinica" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Estado" class="form-check-input" />
            <label asp-for="Estado" class="form-check-label">Activo</label>
        </div>

        <button type="submit" class="btn btn-primary">💾 Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
    </div>
</form>
