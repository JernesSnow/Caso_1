@model AccesoADatos.Models.Servicio
@{
    ViewBag.Title = "Registrar Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Registrar Servicio</h2>

<form asp-action="Create" method="post">
    <div class="card p-4 shadow-sm">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="2" required></textarea>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Monto"></label>
                <input asp-for="Monto" type="number" step="0.01" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="IVA">IVA (%)</label>
                <input asp-for="IVA" type="number" step="0.01" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Especialidad"></label>
                <select asp-for="Especialidad" class="form-select">
                    <option value="1">Medicina general</option>
                    <option value="2">Imagenología</option>
                    <option value="3">Microbiología</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Especialista"></label>
            <input asp-for="Especialista" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Clinica"></label>
            <input asp-for="Clinica" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Estado" class="form-check-input" checked />
            <label asp-for="Estado" class="form-check-label">Activo</label>
        </div>

        <button type="submit" class="btn btn-success">?? Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">?? Volver</a>
    </div>
</form>
