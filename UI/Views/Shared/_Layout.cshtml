<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Los Patitos Salud</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>

        :root{
            --brand: #0d6efd;
            --brand-dark: #0b5ed7;
        }
        .navbar-brand span { font-weight:700; }
        footer { font-size:.9rem; }
        .page-title { display:flex; align-items:center; gap:.6rem; }
        .badge-status { font-size: .8rem; }
    </style>


    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    🩺 <span>Los Patitos Salud</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Servicios" ? "active" : "")"
                               asp-controller="Servicios" asp-action="Index">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" title="Pronto">Citas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="ReservasAdministrativas"
                               asp-action="Index">
                                Ver citas
                            </a>
                        </li>

                    </ul>
                    <span class="navbar-text">Caso de Estudio 1</span>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container py-4">
            @* Mensaje flash *@
            @if (TempData["msg"] is string msg)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @msg
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light border-top mt-auto">
        <div class="container py-3 d-flex justify-content-between flex-wrap gap-2">
            <div>
                <strong>Los Patitos Salud</strong> · Examen MVC C# (.NET 8)
            </div>
            <div class="text-muted">
                Especialidades: Medicina General · Imagenología · Microbiología
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>